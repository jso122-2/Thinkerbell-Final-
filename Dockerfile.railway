# Railway Dockerfile for Thinkerbell
# Uses static HTML files instead of Vite build

FROM python:3.11-slim

# Set environment variables for Railway
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PORT=8000 \
    HOST=0.0.0.0 \
    DEBIAN_FRONTEND=noninteractive

# Install system dependencies (minimal) in single layer
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean \
    && apt-get autoremove -y

# Set working directory
WORKDIR /app

# Copy minimal requirements for faster Railway builds
COPY requirements_railway.txt ./

# Install Python dependencies with Railway optimizations
RUN pip install --no-cache-dir --timeout 600 --retries 2 \
    --index-url https://pypi.org/simple/ \
    -r requirements_railway.txt

# Copy application files in single layer
COPY app/ ./app/
COPY backend_api_server.py ./
COPY test_server.py ./
COPY debug_modular.py ./
COPY test_imports.py ./
COPY simple_modular.py ./
COPY startup_debug.py ./
COPY port_test.py ./
COPY bulletproof_server.py ./
COPY basic_http_server.py ./
COPY debug_health_check.py ./
COPY working_server.py ./
COPY full_thinkerbell_server.py ./
COPY config/ ./config/
COPY style_profiles/ ./style_profiles/

# Copy static HTML files directly
COPY static/ ./static/

# Create all necessary directories in single layer
RUN mkdir -p models logs data temp

# Expose port (Railway will override this)
EXPOSE 8000

# More generous health check for Railway debugging
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=5 \
    CMD curl -f http://localhost:${PORT:-8000}/health || curl -f http://127.0.0.1:${PORT:-8000}/health || exit 1

# Run working server that handles missing static files
CMD ["python", "working_server.py"]
